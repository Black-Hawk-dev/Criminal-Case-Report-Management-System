@model CriminalCaseManagement.Models.ViewModels.CaseListViewModel
@{
    ViewData["Title"] = "إدارة القضايا";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">
                        <i class="fas fa-gavel me-2"></i>
                        إدارة القضايا
                    </h3>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>
                        قضية جديدة
                    </a>
                </div>
                <div class="card-body">
                    <!-- Search and Filter Form -->
                    <form method="get" class="mb-4">
                        <div class="row g-3">
                            <div class="col-md-3">
                                <label asp-for="SearchTerm" class="form-label">البحث</label>
                                <input asp-for="SearchTerm" class="form-control" placeholder="رقم القضية، العنوان، الوصف..." />
                            </div>
                            <div class="col-md-2">
                                <label asp-for="StatusFilter" class="form-label">الحالة</label>
                                <select asp-for="StatusFilter" class="form-select">
                                    <option value="">الكل</option>
                                    <option value="Open" selected="@(Model.StatusFilter == CriminalCaseManagement.Models.Entities.CaseStatus.Open)">مفتوح</option>
                                    <option value="UnderInvestigation" selected="@(Model.StatusFilter == CriminalCaseManagement.Models.Entities.CaseStatus.UnderInvestigation)">قيد التحقيق</option>
                                    <option value="Pending" selected="@(Model.StatusFilter == CriminalCaseManagement.Models.Entities.CaseStatus.Pending)">في الانتظار</option>
                                    <option value="Closed" selected="@(Model.StatusFilter == CriminalCaseManagement.Models.Entities.CaseStatus.Closed)">مغلق</option>
                                    <option value="TransferredToProsecution" selected="@(Model.StatusFilter == CriminalCaseManagement.Models.Entities.CaseStatus.TransferredToProsecution)">محول للنيابة</option>
                                    <option value="Dismissed" selected="@(Model.StatusFilter == CriminalCaseManagement.Models.Entities.CaseStatus.Dismissed)">مرفوض</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label asp-for="InvestigatorFilter" class="form-label">المحقق</label>
                                <input asp-for="InvestigatorFilter" class="form-control" placeholder="اسم المحقق..." />
                            </div>
                            <div class="col-md-2">
                                <label asp-for="DateFrom" class="form-label">من تاريخ</label>
                                <input asp-for="DateFrom" type="date" class="form-control" />
                            </div>
                            <div class="col-md-2">
                                <label asp-for="DateTo" class="form-label">إلى تاريخ</label>
                                <input asp-for="DateTo" type="date" class="form-control" />
                            </div>
                            <div class="col-md-1 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>

                    <!-- Results Summary -->
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="text-muted">
                            عرض @((Model.PageNumber - 1) * Model.PageSize + 1) إلى @Math.Min(Model.PageNumber * Model.PageSize, Model.TotalCount) من @Model.TotalCount نتيجة
                        </div>
                        <div>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-refresh me-1"></i>
                                إعادة تعيين
                            </a>
                        </div>
                    </div>

                    <!-- Cases Table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>رقم القضية</th>
                                    <th>العنوان</th>
                                    <th>البلاغ المرتبط</th>
                                    <th>المحقق المسؤول</th>
                                    <th>الحالة</th>
                                    <th>تاريخ الفتح</th>
                                    <th>عدد المتهمين</th>
                                    <th>عدد المستندات</th>
                                    <th>الإجراءات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Cases.Any())
                                {
                                    @foreach (var item in Model.Cases)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@item.CaseNumber</strong>
                                            </td>
                                            <td>
                                                <div class="fw-bold">@item.Title</div>
                                                <small class="text-muted">@(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</small>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.ReportTitle))
                                                {
                                                    <span class="badge bg-info">@item.ReportTitle</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.AssignedInvestigatorName))
                                                {
                                                    <span class="badge bg-primary">@item.AssignedInvestigatorName</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">غير محدد</span>
                                                }
                                            </td>
                                            <td>
                                                @{
                                                    var statusClass = item.Status switch
                                                    {
                                                        CriminalCaseManagement.Models.Entities.CaseStatus.Open => "bg-success",
                                                        CriminalCaseManagement.Models.Entities.CaseStatus.UnderInvestigation => "bg-warning",
                                                        CriminalCaseManagement.Models.Entities.CaseStatus.Pending => "bg-info",
                                                        CriminalCaseManagement.Models.Entities.CaseStatus.Closed => "bg-secondary",
                                                        CriminalCaseManagement.Models.Entities.CaseStatus.TransferredToProsecution => "bg-primary",
                                                        CriminalCaseManagement.Models.Entities.CaseStatus.Dismissed => "bg-danger",
                                                        _ => "bg-secondary"
                                                    };
                                                    var statusText = item.Status switch
                                                    {
                                                        CriminalCaseManagement.Models.Entities.CaseStatus.Open => "مفتوح",
                                                        CriminalCaseManagement.Models.Entities.CaseStatus.UnderInvestigation => "قيد التحقيق",
                                                        CriminalCaseManagement.Models.Entities.CaseStatus.Pending => "في الانتظار",
                                                        CriminalCaseManagement.Models.Entities.CaseStatus.Closed => "مغلق",
                                                        CriminalCaseManagement.Models.Entities.CaseStatus.TransferredToProsecution => "محول للنيابة",
                                                        CriminalCaseManagement.Models.Entities.CaseStatus.Dismissed => "مرفوض",
                                                        _ => item.Status.ToString()
                                                    };
                                                }
                                                <span class="badge @statusClass">@statusText</span>
                                            </td>
                                            <td>
                                                <small>@item.OpenDate.ToString("yyyy/MM/dd")</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@item.SuspectsCount</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@item.DocumentsCount</span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="التفاصيل">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="تعديل">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="حذف">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="9" class="text-center py-4">
                                            <div class="text-muted">
                                                <i class="fas fa-inbox fa-3x mb-3"></i>
                                                <p>لا توجد قضايا لعرضها</p>
                                                <a asp-action="Create" class="btn btn-primary">
                                                    <i class="fas fa-plus me-1"></i>
                                                    إنشاء قضية جديدة
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    @if (Model.TotalPages > 1)
                    {
                        <nav aria-label="صفحات القضايا">
                            <ul class="pagination justify-content-center">
                                @if (Model.PageNumber > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)" 
                                           asp-route-searchTerm="@Model.SearchTerm" asp-route-statusFilter="@Model.StatusFilter"
                                           asp-route-investigatorFilter="@Model.InvestigatorFilter" asp-route-dateFrom="@Model.DateFrom?.ToString("yyyy-MM-dd")"
                                           asp-route-dateTo="@Model.DateTo?.ToString("yyyy-MM-dd")">
                                            <i class="fas fa-chevron-right"></i>
                                        </a>
                                    </li>
                                }

                                @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                                {
                                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@i"
                                           asp-route-searchTerm="@Model.SearchTerm" asp-route-statusFilter="@Model.StatusFilter"
                                           asp-route-investigatorFilter="@Model.InvestigatorFilter" asp-route-dateFrom="@Model.DateFrom?.ToString("yyyy-MM-dd")"
                                           asp-route-dateTo="@Model.DateTo?.ToString("yyyy-MM-dd")">@i</a>
                                    </li>
                                }

                                @if (Model.PageNumber < Model.TotalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)"
                                           asp-route-searchTerm="@Model.SearchTerm" asp-route-statusFilter="@Model.StatusFilter"
                                           asp-route-investigatorFilter="@Model.InvestigatorFilter" asp-route-dateFrom="@Model.DateFrom?.ToString("yyyy-MM-dd")"
                                           asp-route-dateTo="@Model.DateTo?.ToString("yyyy-MM-dd")">
                                            <i class="fas fa-chevron-left"></i>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-submit form on filter change
            $('select, input[type="date"]').change(function() {
                $(this).closest('form').submit();
            });

            // Confirm delete
            $('.btn-outline-danger').click(function(e) {
                if (!confirm('هل أنت متأكد من حذف هذه القضية؟')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}