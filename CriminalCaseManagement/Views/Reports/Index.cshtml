@{
    ViewData["Title"] = "البلاغات";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h2>
                <i class="fas fa-file-alt me-2"></i>
                إدارة البلاغات
            </h2>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>
                إضافة بلاغ جديد
            </a>
        </div>
    </div>
</div>

<!-- Search and Filter Form -->
<div class="card mb-4">
    <div class="card-header">
        <h6 class="m-0">
            <i class="fas fa-search me-2"></i>
            البحث والتصفية
        </h6>
    </div>
    <div class="card-body">
        <form method="get" asp-action="Index">
            <div class="row">
                <div class="col-md-3 mb-3">
                    <label class="form-label">البحث</label>
                    <input type="text" name="searchString" value="@ViewBag.SearchString" 
                           class="form-control" placeholder="اسم المبلغ، رقم الهوية، أو الوصف">
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">نوع البلاغ</label>
                    <select name="reportType" class="form-select">
                        <option value="">جميع الأنواع</option>
                        @foreach (var type in Enum.GetValues<CriminalCaseManagement.Models.ReportType>())
                        {
                            <option value="@((int)type)" selected="@(ViewBag.ReportType?.Equals(type) == true)">
                                @type.ToString()
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-2 mb-3">
                    <label class="form-label">من تاريخ</label>
                    <input type="date" name="fromDate" value="@ViewBag.FromDate?.ToString("yyyy-MM-dd")" 
                           class="form-control">
                </div>
                <div class="col-md-2 mb-3">
                    <label class="form-label">إلى تاريخ</label>
                    <input type="date" name="toDate" value="@ViewBag.ToDate?.ToString("yyyy-MM-dd")" 
                           class="form-control">
                </div>
                <div class="col-md-2 mb-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-search"></i>
                        بحث
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-times"></i>
                        مسح
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Reports Table -->
<div class="card">
    <div class="card-header">
        <h6 class="m-0">
            <i class="fas fa-list me-2"></i>
            قائمة البلاغات (@Model.Count())
        </h6>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>رقم البلاغ</th>
                            <th>اسم المبلغ</th>
                            <th>رقم الهوية</th>
                            <th>نوع البلاغ</th>
                            <th>تاريخ البلاغ</th>
                            <th>المكان</th>
                            <th>المنشئ</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong class="text-primary">#@item.Id</strong>
                                </td>
                                <td>@item.ReporterName</td>
                                <td>@item.ReporterIdNumber</td>
                                <td>
                                    @switch (item.Type)
                                    {
                                        case CriminalCaseManagement.Models.ReportType.Theft:
                                            <span class="badge bg-warning">سرقة</span>
                                            break;
                                        case CriminalCaseManagement.Models.ReportType.Assault:
                                            <span class="badge bg-danger">اعتداء</span>
                                            break;
                                        case CriminalCaseManagement.Models.ReportType.Fraud:
                                            <span class="badge bg-info">احتيال</span>
                                            break;
                                        case CriminalCaseManagement.Models.ReportType.Murder:
                                            <span class="badge bg-dark">قتل</span>
                                            break;
                                        case CriminalCaseManagement.Models.ReportType.Robbery:
                                            <span class="badge bg-secondary">سطو</span>
                                            break;
                                        default:
                                            <span class="badge bg-light text-dark">أخرى</span>
                                            break;
                                    }
                                </td>
                                <td>@item.ReportDate.ToString("dd/MM/yyyy")</td>
                                <td>@(item.Location ?? "غير محدد")</td>
                                <td>@item.CreatedBy?.FullName</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" 
                                           class="btn btn-sm btn-outline-info" title="عرض التفاصيل">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" 
                                           class="btn btn-sm btn-outline-primary" title="تعديل">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" 
                                           class="btn btn-sm btn-outline-danger" title="حذف">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">لا توجد بلاغات</h5>
                <p class="text-muted">لم يتم العثور على أي بلاغات مطابقة لمعايير البحث</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>
                    إضافة بلاغ جديد
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut();
        }, 5000);
    </script>
}
