@model IEnumerable<CriminalCaseManagement.Models.Report>
@{
    ViewData["Title"] = "البلاغات";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-file-alt me-2"></i>
        البلاغات
    </h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>
        بلاغ جديد
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">قائمة البلاغات</h6>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>رقم البلاغ</th>
                            <th>اسم المبلغ</th>
                            <th>رقم الهوية</th>
                            <th>نوع البلاغ</th>
                            <th>التاريخ</th>
                            <th>الموقع</th>
                            <th>الحالة</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.ReporterName</td>
                                <td>@item.ReporterIdNumber</td>
                                <td>@item.ReportType</td>
                                <td>@item.ReportDate.ToString("dd/MM/yyyy")</td>
                                <td>@item.Location</td>
                                <td>
                                    <span class="badge @(item.Status == "Pending" ? "bg-warning" : 
                                                      item.Status == "UnderInvestigation" ? "bg-info" : 
                                                      item.Status == "Closed" ? "bg-success" : "bg-secondary")">
                                        @item.Status
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-file-alt fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">لا توجد بلاغات</h5>
                <p class="text-muted">قم بإضافة بلاغ جديد للبدء</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>
                    بلاغ جديد
                </a>
            </div>
        }
    </div>
</div>