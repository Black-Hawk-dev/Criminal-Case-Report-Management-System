@{
    ViewData["Title"] = "البلاغات";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2 class="text-primary">
            <i class="fas fa-file-alt me-2"></i>
            البلاغات
        </h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>
            بلاغ جديد
        </a>
    </div>
</div>

<!-- Search and Filter Form -->
<div class="card shadow mb-4">
    <div class="card-header">
        <h6 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-search me-2"></i>
            البحث والتصفية
        </h6>
    </div>
    <div class="card-body">
        <form method="get" asp-action="Index">
            <div class="row">
                <div class="col-md-3 mb-3">
                    <label class="form-label">كلمة البحث</label>
                    <input type="text" name="searchTerm" class="form-control" value="@Model.SearchTerm" placeholder="اسم المبلغ، رقم الهوية، الوصف...">
                </div>
                <div class="col-md-2 mb-3">
                    <label class="form-label">نوع البلاغ</label>
                    <select name="typeFilter" class="form-select">
                        <option value="">الكل</option>
                        <option value="Theft" selected="@(Model.TypeFilter == CriminalCaseManagement.Models.Entities.ReportType.Theft)">سرقة</option>
                        <option value="Assault" selected="@(Model.TypeFilter == CriminalCaseManagement.Models.Entities.ReportType.Assault)">اعتداء</option>
                        <option value="Fraud" selected="@(Model.TypeFilter == CriminalCaseManagement.Models.Entities.ReportType.Fraud)">احتيال</option>
                        <option value="DrugTrafficking" selected="@(Model.TypeFilter == CriminalCaseManagement.Models.Entities.ReportType.DrugTrafficking)">تهريب مخدرات</option>
                        <option value="CyberCrime" selected="@(Model.TypeFilter == CriminalCaseManagement.Models.Entities.ReportType.CyberCrime)">جرائم إلكترونية</option>
                        <option value="DomesticViolence" selected="@(Model.TypeFilter == CriminalCaseManagement.Models.Entities.ReportType.DomesticViolence)">عنف أسري</option>
                        <option value="Other" selected="@(Model.TypeFilter == CriminalCaseManagement.Models.Entities.ReportType.Other)">أخرى</option>
                    </select>
                </div>
                <div class="col-md-2 mb-3">
                    <label class="form-label">الحالة</label>
                    <select name="statusFilter" class="form-select">
                        <option value="">الكل</option>
                        <option value="Pending" selected="@(Model.StatusFilter == CriminalCaseManagement.Models.Entities.ReportStatus.Pending)">في الانتظار</option>
                        <option value="UnderInvestigation" selected="@(Model.StatusFilter == CriminalCaseManagement.Models.Entities.ReportStatus.UnderInvestigation)">قيد التحقيق</option>
                        <option value="Assigned" selected="@(Model.StatusFilter == CriminalCaseManagement.Models.Entities.ReportStatus.Assigned)">تم التعيين</option>
                        <option value="Closed" selected="@(Model.StatusFilter == CriminalCaseManagement.Models.Entities.ReportStatus.Closed)">مغلق</option>
                        <option value="Transferred" selected="@(Model.StatusFilter == CriminalCaseManagement.Models.Entities.ReportStatus.Transferred)">محول</option>
                    </select>
                </div>
                <div class="col-md-2 mb-3">
                    <label class="form-label">من تاريخ</label>
                    <input type="date" name="dateFrom" class="form-control" value="@(Model.DateFrom?.ToString("yyyy-MM-dd"))">
                </div>
                <div class="col-md-2 mb-3">
                    <label class="form-label">إلى تاريخ</label>
                    <input type="date" name="dateTo" class="form-control" value="@(Model.DateTo?.ToString("yyyy-MM-dd"))">
                </div>
                <div class="col-md-1 mb-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Reports Table -->
<div class="card shadow">
    <div class="card-header">
        <h6 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-list me-2"></i>
            قائمة البلاغات (@Model.TotalCount)
        </h6>
    </div>
    <div class="card-body">
        @if (Model.Reports.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>اسم المبلغ</th>
                            <th>رقم الهوية</th>
                            <th>نوع البلاغ</th>
                            <th>تاريخ البلاغ</th>
                            <th>الحالة</th>
                            <th>القضايا</th>
                            <th>المستندات</th>
                            <th>المتهمون</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var report in Model.Reports)
                        {
                            <tr>
                                <td>
                                    <strong>@report.ReporterName</strong>
                                    @if (!string.IsNullOrEmpty(report.PhoneNumber))
                                    {
                                        <br><small class="text-muted">@report.PhoneNumber</small>
                                    }
                                </td>
                                <td>@report.ReporterIdNumber</td>
                                <td>
                                    <span class="badge bg-info">@GetReportTypeName(report.Type)</span>
                                </td>
                                <td>@report.ReportDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(report.Status)">
                                        @GetStatusName(report.Status)
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@report.CasesCount</span>
                                </td>
                                <td>
                                    <span class="badge bg-info">@report.DocumentsCount</span>
                                </td>
                                <td>
                                    <span class="badge bg-warning">@report.SuspectsCount</span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@report.Id" class="btn btn-sm btn-outline-primary" title="التفاصيل">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@report.Id" class="btn btn-sm btn-outline-warning" title="تعديل">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@report.Id" class="btn btn-sm btn-outline-danger" title="حذف">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        @if (Model.PageNumber > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-searchTerm="@Model.SearchTerm" asp-route-typeFilter="@Model.TypeFilter" asp-route-statusFilter="@Model.StatusFilter" asp-route-dateFrom="@Model.DateFrom?.ToString("yyyy-MM-dd")" asp-route-dateTo="@Model.DateTo?.ToString("yyyy-MM-dd")">
                                    السابق
                                </a>
                            </li>
                        }

                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-searchTerm="@Model.SearchTerm" asp-route-typeFilter="@Model.TypeFilter" asp-route-statusFilter="@Model.StatusFilter" asp-route-dateFrom="@Model.DateFrom?.ToString("yyyy-MM-dd")" asp-route-dateTo="@Model.DateTo?.ToString("yyyy-MM-dd")">@i</a>
                            </li>
                        }

                        @if (Model.PageNumber < Model.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-searchTerm="@Model.SearchTerm" asp-route-typeFilter="@Model.TypeFilter" asp-route-statusFilter="@Model.StatusFilter" asp-route-dateFrom="@Model.DateFrom?.ToString("yyyy-MM-dd")" asp-route-dateTo="@Model.DateTo?.ToString("yyyy-MM-dd")">
                                    التالي
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-file-alt fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">لا توجد بلاغات</h5>
                <p class="text-muted">لم يتم العثور على بلاغات تطابق معايير البحث</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>
                    إنشاء بلاغ جديد
                </a>
            </div>
        }
    </div>
</div>

@functions {
    private string GetReportTypeName(CriminalCaseManagement.Models.Entities.ReportType type)
    {
        return type switch
        {
            CriminalCaseManagement.Models.Entities.ReportType.Theft => "سرقة",
            CriminalCaseManagement.Models.Entities.ReportType.Assault => "اعتداء",
            CriminalCaseManagement.Models.Entities.ReportType.Fraud => "احتيال",
            CriminalCaseManagement.Models.Entities.ReportType.DrugTrafficking => "تهريب مخدرات",
            CriminalCaseManagement.Models.Entities.ReportType.CyberCrime => "جرائم إلكترونية",
            CriminalCaseManagement.Models.Entities.ReportType.DomesticViolence => "عنف أسري",
            CriminalCaseManagement.Models.Entities.ReportType.Other => "أخرى",
            _ => type.ToString()
        };
    }

    private string GetStatusName(CriminalCaseManagement.Models.Entities.ReportStatus status)
    {
        return status switch
        {
            CriminalCaseManagement.Models.Entities.ReportStatus.Pending => "في الانتظار",
            CriminalCaseManagement.Models.Entities.ReportStatus.UnderInvestigation => "قيد التحقيق",
            CriminalCaseManagement.Models.Entities.ReportStatus.Assigned => "تم التعيين",
            CriminalCaseManagement.Models.Entities.ReportStatus.Closed => "مغلق",
            CriminalCaseManagement.Models.Entities.ReportStatus.Transferred => "محول",
            _ => status.ToString()
        };
    }

    private string GetStatusBadgeClass(CriminalCaseManagement.Models.Entities.ReportStatus status)
    {
        return status switch
        {
            CriminalCaseManagement.Models.Entities.ReportStatus.Pending => "bg-warning",
            CriminalCaseManagement.Models.Entities.ReportStatus.UnderInvestigation => "bg-info",
            CriminalCaseManagement.Models.Entities.ReportStatus.Assigned => "bg-primary",
            CriminalCaseManagement.Models.Entities.ReportStatus.Closed => "bg-success",
            CriminalCaseManagement.Models.Entities.ReportStatus.Transferred => "bg-secondary",
            _ => "bg-secondary"
        };
    }
}
