@model CriminalCaseManagement.Models.Report
@{
    ViewData["Title"] = "تفاصيل البلاغ";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-file-alt me-2"></i>
        تفاصيل البلاغ رقم @Model.Id
    </h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="fas fa-edit me-2"></i>
            تعديل
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-right me-2"></i>
            العودة للقائمة
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">معلومات البلاغ</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">
                                <i class="fas fa-user me-1"></i>
                                اسم المبلغ:
                            </dt>
                            <dd class="col-sm-8">@Model.ReporterName</dd>

                            <dt class="col-sm-4">
                                <i class="fas fa-id-card me-1"></i>
                                رقم الهوية:
                            </dt>
                            <dd class="col-sm-8">@Model.ReporterIdNumber</dd>

                            <dt class="col-sm-4">
                                <i class="fas fa-tag me-1"></i>
                                نوع البلاغ:
                            </dt>
                            <dd class="col-sm-8">@Model.ReportType</dd>

                            <dt class="col-sm-4">
                                <i class="fas fa-calendar me-1"></i>
                                تاريخ البلاغ:
                            </dt>
                            <dd class="col-sm-8">@Model.ReportDate.ToString("dd/MM/yyyy")</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">
                                <i class="fas fa-map-marker-alt me-1"></i>
                                الموقع:
                            </dt>
                            <dd class="col-sm-8">@Model.Location</dd>

                            <dt class="col-sm-4">
                                <i class="fas fa-info-circle me-1"></i>
                                الحالة:
                            </dt>
                            <dd class="col-sm-8">
                                <span class="badge @(Model.Status == "Pending" ? "bg-warning" : 
                                                  Model.Status == "UnderInvestigation" ? "bg-info" : 
                                                  Model.Status == "Closed" ? "bg-success" : "bg-secondary")">
                                    @Model.Status
                                </span>
                            </dd>

                            <dt class="col-sm-4">
                                <i class="fas fa-clock me-1"></i>
                                تاريخ الإنشاء:
                            </dt>
                            <dd class="col-sm-8">@Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</dd>

                            @if (Model.UpdatedAt.HasValue)
                            {
                                <dt class="col-sm-4">
                                    <i class="fas fa-edit me-1"></i>
                                    آخر تحديث:
                                </dt>
                                <dd class="col-sm-8">@Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                            }
                        </dl>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-12">
                        <dt>
                            <i class="fas fa-align-left me-1"></i>
                            وصف البلاغ:
                        </dt>
                        <dd class="mt-2">
                            <div class="border rounded p-3 bg-light">
                                @Model.Description
                            </div>
                        </dd>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">إجراءات سريعة</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="#" class="btn btn-success">
                        <i class="fas fa-folder-plus me-2"></i>
                        إنشاء قضية
                    </a>
                    <a href="#" class="btn btn-info">
                        <i class="fas fa-user-plus me-2"></i>
                        إضافة متهم
                    </a>
                    <a href="#" class="btn btn-warning">
                        <i class="fas fa-paperclip me-2"></i>
                        إرفاق مستندات
                    </a>
                    <a href="#" class="btn btn-secondary">
                        <i class="fas fa-print me-2"></i>
                        طباعة البلاغ
                    </a>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Attachments))
        {
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">المرفقات</h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        @foreach (var attachment in Model.Attachments.Split(','))
                        {
                            <li class="mb-2">
                                <a href="#" class="text-decoration-none">
                                    <i class="fas fa-file me-2"></i>
                                    @attachment
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        }
    </div>
</div>